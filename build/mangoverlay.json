{
  "id": "io.github.loissascha.mangoverlay",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "mangoverlay",
  "modules": [
    {
      "name": "mangoverlay",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 ./bin/mangoverlay /app/bin/mangoverlay",
        "install -Dm644 mangoverlay.png /app/share/icons/io.github.loissascha.mangoverlay.png",
        "install -Dm644 io.github.loissascha.mangoverlay.desktop /app/share/applications/io.github.loissascha.mangoverlay.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "./"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--share=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=host",
    "--talk-name=org.gnome.Platform"
  ]
}
